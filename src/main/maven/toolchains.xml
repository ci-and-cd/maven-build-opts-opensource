<toolchains xmlns="http://maven.apache.org/POM/4.0.0"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://maven.apache.org/TOOLCHAINS/1.1.0 https://maven.apache.org/xsd/toolchains-1.1.0.xsd">

    <toolchain>
        <type>jdk</type>
        <provides>
            <version>1.8</version>
            <!--<vendor>openjdk</vendor>-->
        </provides>
        <configuration>
            <!-- OSX style: /Library/Java/JavaVirtualMachines/zulu-8.jdk/Contents/Home -->
            <!-- travis-ci style: /usr/lib/jvm/java-8-openjdk -->
            <!--
            # Disable SIP (System Integrity Protection)
            # see: https://apple.stackexchange.com/questions/208764/cant-write-to-usr-lib
            # Boot by Recovery OS and run `csrutil disable` in Terminal.app
            mkdir -p /usr/lib/jvm
            ln -s /Library/Java/JavaVirtualMachines/zulu-8.jdk/Contents/Home /usr/lib/jvm/java-8-openjdk
            # run `csrutil enable` in Terminal.app (Recovery OS)
            -->
            <jdkHome>/usr/lib/jvm/java-8-openjdk</jdkHome>
        </configuration>
    </toolchain>
    <toolchain>
        <type>jdk</type>
        <provides>
            <version>8</version>
        </provides>
        <configuration>
            <jdkHome>/usr/lib/jvm/java-8-openjdk</jdkHome>
        </configuration>
    </toolchain>
    <toolchain>
        <type>jdk</type>
        <provides>
            <version>11</version>
            <!--<vendor>openjdk</vendor>-->
            <id>jdk11</id>
        </provides>
        <configuration>
            <!-- OSX style: /Library/Java/JavaVirtualMachines/openjdk-11.0.2.jdk/Contents/Home -->
            <!--            /Library/Java/JavaVirtualMachines/zulu-11.jdk/Contents/Home -->
            <!-- travis-ci style: /usr/lib/jvm/java-11-openjdk -->
            <jdkHome>/usr/lib/jvm/java-11-openjdk</jdkHome>
        </configuration>
    </toolchain>
</toolchains>
